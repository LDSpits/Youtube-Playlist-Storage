<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YoutubeGUIWPF.resources">

    <ControlTemplate x:Key="DataLoading" TargetType="ListView">
        <Border BorderBrush="DarkGray" BorderThickness="1" Background="Gray">
            <StackPanel Background="Gray" HorizontalAlignment="Center">
                <ProgressBar Name="LoadingBar" Height="40" Width="auto" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </ControlTemplate>
    
</ResourceDictionary>