<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YoutubeGUIWPF.resources">

    <ControlTemplate x:Key="FileNotFound">
        <Border BorderBrush="Gray" BorderThickness="1">
            <StackPanel Background="LightGray">
                <TextBlock Text="No local playlist was found..." FontSize="20" HorizontalAlignment="Center" Foreground="#FF4B4949" Padding="10"/>
                <Button HorizontalAlignment="Center">
                    <TextBlock Text="Create a new one" FontSize="18" Padding="5"/>
                </Button>
            </StackPanel>
        </Border>
    </ControlTemplate>
    
</ResourceDictionary>